<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pet_card_view"
    android:padding="10sp"
    android:layout_height="240sp"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/activity_vertical_margin"
    app:cardCornerRadius="@dimen/corner_radius_cardview"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="@dimen/card_img_width"
            android:layout_height="@dimen/card_img_height"
            android:src="@drawable/icons8_cat_head_96"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/img_icon_name"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icons8_dog_bone_24" />

            <TextView
                android:id="@+id/pet_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:gravity="left"
                android:textAlignment="gravity"
                android:layout_weight="0.27"/>

            <TextView
                android:id="@+id/pet_card_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="right"
                android:textAlignment="gravity"
                android:textSize="20sp"
                android:layout_weight="0.67"/>

            <ImageView
                android:id="@+id/img_icon_rating"
                android:src="@drawable/icons8_dog_bone_48"
                android:background="@android:color/transparent"
                android:layout_width="@dimen/toolbar_icons_width"
                android:layout_gravity="end|center_vertical"
                android:layout_height="@dimen/toolbar_icons_height"
                android:text="Delete"
                android:layout_weight="0.1" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>